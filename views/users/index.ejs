<% include ../includes/header.ejs %>
<% include ../includes/sidebar.ejs %>
      <section>
         <!-- Page content-->
         <div class="content-wrapper">
            <h3>Home - Users
               <small>All Users</small>
            </h3>
            <div class="row">
              <div class="col-md-12">
                <table class="table table-responsive table-striped table-bordered">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Name</th>
                      <th>Game Played</th>
                      <th>Points</th>
                      <th>Todays Points</th>
                      <th>Created Date</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(i=data.length - 1; i >= 0; i--) { %>
                      <tr>
                        <td><%= i+1 %></td>
                        <td><%= data[i].name %></td>
                        <td><%= data[i].game_played %></td>
                        <td><%= data[i].points %></td>
                        <td><%= data[i].today_points %></td>
                        <td><%= data[i].date %></td>
                        <td>
                          <a href="delete/<%= data[i]._id %>" class="ajaxClick">Delete</a>
                        </td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
         </div>
      </section>
      <!-- Page footer-->
<% include ../includes/footer.ejs %>
