<% include ./includes/header.ejs %>
<% function numberFormat(time) {
  if(time == 1)
    return "First";
  else if(time == 2)
    return "Second";
  else if(time == 3)
    return "Third";
  else if(time == 4)
    return "Fourth";
  else if(time == 5)
    return "Fifth";
  else if(time == 6)
    return "Sixth";
  else if(time == 7)
    return "Seventh";
  else if(time == 8)
    return "Eighth";
  else if(time == 9)
    return "Nineth";
  else
    return time+"'th";
}
%>
      <section>
         <!-- Page content-->
         <div class="content-wrapper">
            <div class="row">
              <div class="col-md-12">
                <div class="panel panel-primary">
                  <div class="panel-header">
                    <%=userdata.name %>'s Profile
                  </div>
                  <div class="panel-body">
                    <div class="unwrap">
                      <div style="background-image: url(/assets/img/profile-bg.jpg)" class="bg-cover">
                        <div class="p-xl text-center text-white">
                          <img src="/assets/img/user/13.jpg" alt="Image" class="img-thumbnail img-circle thumb128">
                          <h3 class="m0"><%=userdata.name %></h3>
                        </div>
                      </div>
                      <div class="text-center bg-bizpati p-lg mb-xl">
                        <div class="row row-table">
                          <div class="col-xs-4 br">
                            <h3 class="m0"><%=userdata.points %></h3>
                            <p class="m0">
                              <span>Total Points</span>
                            </p>
                          </div>
                          <div class="col-xs-4 br">
                            <h3 class="m0"><%=userdata.today_points %></h3>
                            <p class="m0">Todays Points</p>
                          </div>
                          <div class="col-xs-4">
                            <h3 class="m0"><%=userdata.game_played %></h3>
                            <p class="m0">Game Played</p>
                          </div>
                        </div>
                      </div>
                    </div>
                    <h3 class="bg-bizpati text-center" style="min-height:40px;padding-top:5px">My Predictions</h3>
                    <div class="table-responsive">
                      <table class="table table-striped table-bordered">
                        <thead>
                          <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Match ID</th>
                            <th>Prediction</th>
                          </tr>
                        </thead>
                        <tbody>
                        <% for(var i = 0; i < data.length; i++) { %>
                          <tr>
                            <td><%=(i + 1) %></td>
                            <td><%=data[i].date %></td>
                            <td><%=numberFormat(data[i].scores[0].match) %> Match</td>
                            <td><%=data[i].scoreone %> VS <%=data[i].scoretwo %></td>
                          </tr>
                        <% } %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
         </div>
         <% include ./includes/footer.ejs %>
